<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Facultyprofile"
    android:background="@color/commonBack">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/commonBack"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/oprofiletext"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:text="Profile"
                        />
                    <TextView
                        android:id="@+id/onoticestext"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:text="Notices"
                        />
                    <TextView
                        android:id="@+id/oinboxtext"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:textAlignment="center"
                        android:textSize="22sp"
                        android:text="Inbox"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp">
                    <ImageView
                        android:id="@+id/oprofImage"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:src="@mipmap/userperson"
                        />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="40dp"
                        android:layout_marginRight="2dp">

                        <TextView
                            android:id="@+id/profname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"

                            android:text="Binod Kumar"

                            android:textColor="@color/splashcolor"
                            android:textSize="16sp" />


                        <TextView
                            android:id="@+id/profdepartment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="2dp"

                            android:text="Guard Rajendra Bhawan"

                            android:textColor="@color/splashcolor"

                            android:textSize="16sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>