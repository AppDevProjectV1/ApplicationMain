<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBack">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/commonBack"
     tools:context=".ProfileSettingsActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        >
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_baseline_account_circle_24"
            app:civ_border_color="@color/splashcolor"
            app:civ_border_width="1dp"
            android:layout_margin="15dp"
            app:civ_shadow_radius="10dp"
            app:civ_shadow_color="#3f51b5"
            android:layout_gravity="center_vertical"
            android:id="@+id/circularimageview"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="center_vertical"
             android:text="Jatin Mayank"
             android:textSize="25sp"
             android:layout_marginLeft="21dp"
             android:textColor="@color/splashcolor"
             />
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/privayopt"
                android:id="@+id/privacy"

                android:layout_gravity="center_vertical"
                android:layout_margin="35dp"
                />
            <TextView
                android:id="@+id/privacysetting"
                android:layout_width="match_parent"
                android:paddingTop="21dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:text="Privacy"
                android:textSize="20sp"
                android:layout_marginLeft="21dp"
                android:textColor="@color/splashcolor"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/notifications"
                android:id="@+id/notification"
                android:layout_gravity="center_vertical"
                android:layout_margin="35dp"
                />
            <TextView
                android:id="@+id/notificationsetting"
                android:layout_width="match_parent"
                android:paddingTop="21dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:text="Notifications"
                android:textSize="20sp"
                android:layout_marginLeft="21dp"
                android:textColor="@color/splashcolor"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/help"
                android:id="@+id/help"
                android:layout_gravity="center_vertical"
                android:layout_margin="35dp"
                />
            <TextView
                android:id="@+id/helpsetting"
                android:layout_width="match_parent"
                android:paddingTop="21dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:text="Help"
                android:textSize="20sp"
                android:layout_marginLeft="21dp"
                android:textColor="@color/splashcolor"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/datause"
                android:id="@+id/datause"
                android:layout_gravity="center_vertical"
                android:layout_margin="35dp"
                />
            <TextView
                android:id="@+id/datauseagesetting"
                android:layout_width="match_parent"
                android:paddingTop="21dp"
                android:layout_height="75dp"
                android:layout_gravity="center_vertical"
                android:text="Data Usage"
                android:textSize="20sp"
                android:layout_marginLeft="21dp"
                android:textColor="@color/splashcolor"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c0c0c0"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/shareapp"
                android:id="@+id/shareapp"
                android:layout_gravity="center_vertical"
              android:layout_margin="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Invite a Friend"
                android:textSize="16sp"

                android:textColor="@color/splashcolor"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
</ScrollView>