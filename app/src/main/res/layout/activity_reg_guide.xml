<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campuscompass.appdevproject.RegGuide"
    android:background="@color/commonBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@layout/edit_text">


                <TextView
                    android:id="@+id/headguide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/splashcolor"
                    android:textSize="35sp"
                    android:text="Registration guide"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    tools:ignore="RtlCompat"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"/>


                <TextView
                    android:id="@+id/guideh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:text="adde"
                    android:padding="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"/>

                <TextView
                    android:id="@+id/guideb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blckgreen"
                    android:textSize="20dp"
                    android:text="adde"
                    android:padding="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="6dp"/>


            </LinearLayout>

        </ScrollView>
    </RelativeLayout>

</FrameLayout>