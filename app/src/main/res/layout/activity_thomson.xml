<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campuscompass.appdevproject.nav2activities.Thomson"
    android:background="@color/commonBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedimage"
            android:layout_gravity="center"
            android:padding="24dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/Tname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="James Thomason Building"
                android:textAlignment="center"
                android:layout_marginStart="5dp"
                android:textSize="24sp"
                android:layout_marginLeft="5dp"
                android:gravity="center_horizontal" />

            <ImageView
                android:id="@+id/Timage"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_below="@+id/Tname"
                android:layout_marginTop="10dp"
                android:src="@drawable/thomson"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/Tinfo"
                android:layout_below="@id/Timage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="5dp" />

        </RelativeLayout>
    </RelativeLayout>



</FrameLayout>