<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfile"
    android:background="@color/commonBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            app:titleTextColor="@color/white"
            android:background="@color/heading">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toLeftOf="@id/search"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="40dp"
                    android:layout_toLeftOf="@+id/profiletoggle"
                    android:src="@drawable/ic_baseline_search_24"/>

                <ImageView
                    android:id="@+id/profiletoggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_baseline_menu_24"/>

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topnav"
            android:id="@+id/scroll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Feeds here"
                    android:textSize="45sp"/>

            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/topnav"
            android:layout_below="@+id/toolbar">
            <TextView
                android:id="@+id/profiletab"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Profile"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"

                android:layout_weight="1"/>
            <TextView
                android:id="@+id/feedstab"
                android:layout_toRightOf="@id/profiletab"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Feeds"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/inboxtab"
                android:layout_toRightOf="@id/feedstab"

                android:layout_width="0dp"
                android:layout_height="30dp"
                android:text="Inbox"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>