<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.campuscompass.appdevproject.StudentProfile"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/topnav"
            android:id="@+id/scroll">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                  android:id="@+id/interestrecycleview"/>

            </RelativeLayout>
        </ScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:orientation="horizontal"
            android:id="@+id/topnav"
           >
            <ImageView
                android:id="@+id/profiletab"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:text="Profile"
                android:src="@drawable/admi"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"

                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/feedstab"
                android:layout_toRightOf="@id/profiletab"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:text="Feeds"
                android:src="@mipmap/choiceicons"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/inboxtab"
                android:layout_toRightOf="@id/feedstab"
                android:src="@mipmap/groupchats"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:text="Inbox"
                android:background="@drawable/custom_nav_tile"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>