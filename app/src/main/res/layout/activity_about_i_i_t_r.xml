<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nav2activities.AboutIITR">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/heading"
        android:id="@+id/toolbar">
        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About IITR"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp" />

    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/building"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_width="400dp"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp"
                android:text="James Thomson Building"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/buttonshadow"/>
            <TextView
                android:id="@+id/dean"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/building"
                android:layout_width="400dp"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp"
                android:text="Dean and Directors"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/buttonshadow"
                />
            <TextView
                android:id="@+id/departments"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/dean"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:text="Departments"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/buttonshadow"/>

            <TextView
                android:id="@+id/hostels"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/departments"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:text="Hostels"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:background="@drawable/buttonshadow"/>
            <TextView
                android:id="@+id/library"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/hostels"
                android:layout_width="400dp"
                android:layout_height="80dp"
                android:text="Library"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:background="@drawable/buttonshadow"/>
            <TextView
                android:id="@+id/clubs"
                android:textSize="28sp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/library"
                android:layout_width="400dp"
                android:layout_centerHorizontal="true"
                android:layout_height="80dp"
                android:text=" Activity Clubs"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/buttonshadow"/>
        </RelativeLayout>


    </androidx.core.widget.NestedScrollView>

</RelativeLayout>